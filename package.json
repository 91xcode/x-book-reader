{
  "name": "new-x-project",
  "version": "0.1.0",
  "description": "An ebook reader application built with Electron and Next.js, based on readest project architecture",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"wait-on http://127.0.0.1:3000 && npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "electron .",
    "build": "next build && next export",
    "build:electron": "npm run build && electron-builder",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "ebook",
    "reader",
    "electron",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "homepage": "./",
  "dependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "clsx": "^2.1.1",
    "daisyui": "^4.12.14",
    "eslint": "^8",
    "eslint-config-next": "15.1.0",
    "foliate-js": "file:./packages/foliate-js",
    "jszip": "^3.10.1",
    "next": "15.1.0",
    "overlayscrollbars": "^2.10.1",
    "overlayscrollbars-react": "^0.5.6",
    "postcss": "^8",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "^5.3.0",
    "react-window": "^1.8.11",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.10.1",
    "@types/react": "18.3.12",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "18.3.1",
    "@types/react-window": "^1.8.8",
    "@types/tinycolor2": "^1.4.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "daisyui": "^4.12.24",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.0.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.newxproject.reader",
    "productName": "NewXProject Reader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
